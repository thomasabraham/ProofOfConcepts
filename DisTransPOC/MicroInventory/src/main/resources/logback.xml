<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="10 seconds">
	<root level="all">
		<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
			<encoder>
				<pattern>%d [%thread] %-5level %logger{36} - %msg%n
				</pattern>
			</encoder>
		</appender>
	</root>
</configuration>
